<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="One_Proposal.MainPage">

    <Grid 
        BackgroundColor="{StaticResource background}">

        <!-- BASE STRUCTURE -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>


        <!-- NAV GRID 0:0 -->
        <VerticalStackLayout
            Grid.Row="0" Grid.Column="0">
            
            <Label
                Text="Cell 0 0"/>
            
        </VerticalStackLayout>

        <!-- DASHBOARD GRID 0:1 -->
        <Frame
            CornerRadius="20"
            Margin="30,20,30,20"
            Padding="10,10,10,10"
            Grid.Row="0" Grid.Column="1"
            BorderColor="Transparent"
            BackgroundColor="{StaticResource White}">
            <!-- FRAME is for CORNER RADIUS -->
            
            <Grid
                
            Padding="15,0,20,20"
            ColumnSpacing="20"
            RowSpacing="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/> <!-- for SEARCH etc-->
                <RowDefinition Height="1*"/>    
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

                <!-- SEARCH TOP PART -->
                <Grid
                    Grid.Row="0" Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Padding="0,10,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3.5*"/>
                    </Grid.ColumnDefinitions>
                            
                         <!-- SEARCH -->
                        <Frame
                            Padding="0"
                            CornerRadius="20">
                        <Entry
                            Visual="Default"
                            Grid.Row="0" Grid.Column="0"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Fill"
                            Placeholder="Search"
                            BackgroundColor="{StaticResource background}"/>
                        </Frame>
                                 <Grid
                                    Grid.Row="0" Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.3*"/>
                                            <ColumnDefinition Width="0.3*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Text="1"
                                            Margin="0,0,5,0"
                                            BackgroundColor="{StaticResource temp}"
                                            TextColor="{StaticResource primary}"/>
                                    
                                        <Button
                                            Grid.Column="1"
                                            Text="2"
                                            Margin="5,0,5,0"
                                            BackgroundColor="{StaticResource temp}"
                                            TextColor="{StaticResource primary}"/>

                                        <Button
                                            Grid.Column="2"
                                            Text="02.20.2025"
                                            Margin="20,0,20,0"
                                            BackgroundColor="{StaticResource temp}"
                                            TextColor="{StaticResource blackLight}"/>
                                        <Button
                                            Grid.Column="3"
                                            Text="Club of Programmers"
                                            Margin="20,0,20,0"
                                            BackgroundColor="{StaticResource temp}"
                                            TextColor="{StaticResource blackLight}"/>
                       

                    </Grid>

                </Grid>

                <Frame
                    Padding="0"
                    CornerRadius="30"
                    BackgroundColor="{StaticResource White}"
                    Grid.Row="1" Grid.Column="0"
                    Grid.RowSpan="3">
                    
                    <Frame
                        VerticalOptions="Start"
                        BackgroundColor="{StaticResource primary}"
                        CornerRadius="30"
                        HeightRequest="300">
                        <VerticalStackLayout
                            Padding="30">
                            <Label 
                                Text="PROPOSE
                                ACTIVITY"
                                TextColor="White"
                                FontSize="33"/>
                            <StackLayout
                                VerticalOptions="End"
                                HorizontalOptions="Start">
                            <Button
                                Text="SUBMIT HERE"
                                BackgroundColor="White"
                                WidthRequest="130"
                                Margin="0,60,0,0"
                                TextColor="{StaticResource primary}"/>
                            </StackLayout>
                        </VerticalStackLayout>

                    </Frame>

                </Frame>
            
            <VerticalStackLayout
                BackgroundColor="{StaticResource temp}"
                Grid.Row="1" Grid.Column="1">
                <Label Text="GRID 1 1"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout
                BackgroundColor="{StaticResource temp}"
                Grid.Row="2" Grid.Column="1">
                <Label Text="GRID 2 1"/>
            </VerticalStackLayout>

            </Grid>
        </Frame>



    </Grid>


</ContentPage>
